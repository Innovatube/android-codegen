{
  "params": {
    "directory": {
      "message": "What is the directory?"
    },
    "package_name": {
      "message": "What is your package name?"
    },
    "app_name": {
      "message": "What are you calling your app?"
    },
    "target_sdk": {
      "message": "What is the target sdk?"
    },
    "min_sdk": {
      "message": "What is the minimum sdk you want to support?"
    },
    "swagger_codegen": {
      "message": "Do you want to generate source code from swagger?",
      "type": "boolean"
    }
  },
  "tasks": {
    "copy_template_directory": [
      {
        "from": "<%= base_dir %>",
        "to": "<%= directory %>/<%= app_name %>",
        "exclude": [
          "/template_","/java/"
        ]
      },
      {
        "from": "<%= base_dir %>/app/src/main/java/com/innovatube/carbid",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>",
        "exclude": [
          "/template/","/template_"
        ]
      },
      {
        "from": "<%= base_dir %>/app/src/test/java/com/innovatube/carbid",
        "to": "<%= directory %>/<%= app_name %>/app/src/test/java/<%= package_name.gsub('.','/') %>",
        "exclude": [
          "/template/","/template_"
        ]
      },
      {
        "from": "<%= base_dir %>/app/src/androidTest/java/com/innovatube/carbid",
        "to": "<%= directory %>/<%= app_name %>/app/src/androidTest/java/<%= package_name.gsub('.','/') %>",
        "exclude": [
          "/template/","/template_"
        ]
      }
    ]
  },
  "extra_tasks": [
    {
      "name": "swagger_codegen",
      "require_true": ["swagger_codegen"]
    }
  ]
}