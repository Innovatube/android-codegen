{
  "params": {
    "directory": {
      "message": "What is the directory?"
    },
    "package_name": {
      "message": "What is your package name?"
    },
    "app_name": {
      "message": "What are you calling your app?"
    },
    "enable_facebook_login": {
      "message": "Do you want to enable Facebook Login?",
      "type": "boolean"
    },
    "enable_google_login": {
      "message": "Do you want to enable Google Login?",
      "type": "boolean"
    },
    "facebook_app_id": {
      "message": "Enter your facebook app id: (leave it empty to create a new facebook app)",
      "require_true": "enable_facebook_login"
    }
  },
  "tasks": {
    "copy_template_directory": [
      {
        "from": "<%= base_dir %>/app/src/main/java/com/innovatube/carbid/ui/template/login",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login",
        "exclude": [
          "Presenter.java"
        ]
      }
    ],
    "copy_template_file": [
      {
        "from": "<%= base_dir %>/app/src/main/res/layout/template_activity_login.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/layout/activity_login.xml"
      },
      {
        "from": "<%= base_dir %>/app/src/main/java/com/innovatube/carbid/ui/template/login/FacebookLoginPresenter.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login/FacebookLoginPresenter.java",
        "require_true": [
          "enable_facebook_login"
        ]
      },
      {
        "from": "<%= base_dir %>/app/src/main/java/com/innovatube/carbid/ui/template/login/GoogleSignInPresenter.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login/GoogleSignInPresenter.java",
        "require_true": [
          "enable_google_login"
        ]
      }
    ],
    "merge_template_file": [
      {
        "from": "<%= base_dir %>/app/src/main/res/values/template_login_strings.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/values/strings.xml",
        "merge_type": "resources"
      },
      {
        "from": "<%= base_dir %>/app/gradle_template/template_login.gradle",
        "to": "<%= directory %>/<%= app_name %>/app/build.gradle",
        "merge_type": "app_dependencies"
      },
      {
        "from": "<%= base_dir %>/app/src/main/manifest_template/template_login.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/AndroidManifest.xml",
        "merge_type": "manifest"
      }
    ]
  },
  "extra_tasks": [
    {
      "name": "generate_facebook_hash",
      "require_true": ["enable_facebook_login"],
      "require_false": ["facebook_app_id"]
    },{
      "name": "generate_google_config",
      "require_true": ["enable_google_login"]
    }
  ]
}