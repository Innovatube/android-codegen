{
  "params": {
    "directory": {
      "message": "What is the directory?"
    },
    "package_name": {
      "message": "What is your package name?"
    },
    "app_name": {
      "message": "What are you calling your app?"
    },
    "target_sdk": {
      "message": "What is the target sdk?"
    },
    "min_sdk": {
      "message": "What is the minimum sdk you want to support?"
    },
    "enable_facebook_login": {
      "message": "Do you want to enable Facebook Login?",
      "type": "boolean"
    },
    "enable_google_login": {
      "message": "Do you want to enable Google Login?",
      "type": "boolean"
    },
    "navigation_drawer": {
      "message": "Do you want to enable navigation drawer?",
      "type": "boolean"
    },
    "facebook_app_id": {
      "message": "Enter your facebook app id: (leave it empty to create a new facebook app)",
      "require_true": "enable_facebook_login"
    },
    "generate_model": {
      "message": "Do you want to generate model?",
      "type": "boolean"
    }
  },
  "tasks": {
    "copy_template_directory": [
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>",
        "exclude": [
          "com/innovatube/carbid/ui/login",
          "com/innovatube/carbid/ui/home"
        ]
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/androidTest/com/innovatube/carbid",
        "to": "<%= directory %>/<%= app_name %>/app/src/androidTest/java/<%= package_name.gsub('.','/') %>"
      },
      {
        "from": "<%= base_dir %>/template/app/src/test/java/com/innovatube/carbid",
        "to": "<%= directory %>/<%= app_name %>/app/src/test/java/<%= package_name.gsub('.','/') %>"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res",
        "exclude": [
          "app/src/main/res/layout",
          "app/src/main/res/menu"
        ]
      }
    ],
    "copy_template_file": [
      {
        "from": "<%= base_dir %>/template/app/src/main/AndroidManifest.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/AndroidManifest.xml"
      },
      {
        "from": "<%= base_dir %>/template/app/src/debug/res/values/values.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/debug/res/values/values.xml"
      },
      {
        "from": "<%= base_dir %>/template/app/src/release/res/values/values.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/release/res/values/values.xml"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res/layout/activity_home_nd.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/layout/activity_home.xml",
        "require_true": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res/layout/nav_header_navigation_drawer.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/layout/nav_header_navigation_drawer.xml",
        "require_true": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res/layout/activity_login.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/layout/activity_login.xml",
        "require_true": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res/layout/home_fragment.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/layout/home_fragment.xml",
        "require_true": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res/layout/activity_home_nd.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/layout/activity_home.xml",
        "require_false": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/res/menu/activity_navigation_drawer_drawer.xml",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/res/menu/activity_navigation_drawer_drawer.xml",
        "require_true": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/build.gradle",
        "to": "<%= directory %>/<%= app_name %>/app/build.gradle"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid/ui/home/HomeActivity.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/home/HomeActivity.java",
        "require_false": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid/ui/home/HomeActivityNavigationDrawer.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/home/HomeActivity.java",
        "require_true": "navigation_drawer"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid/ui/login/FacebookLoginPresenter.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login/FacebookLoginPresenter.java",
        "require_true": "enable_facebook_login"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid/ui/login/GoogleSignInPresenter.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login/GoogleSignInPresenter.java",
        "require_true": "enable_google_login"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid/ui/login/LoginActivity.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login/LoginActivity.java"
      },
      {
        "from": "<%= base_dir %>/template/app/src/main/java/com/innovatube/carbid/ui/login/LoginMvpView.java",
        "to": "<%= directory %>/<%= app_name %>/app/src/main/java/<%= package_name.gsub('.','/') %>/ui/login/LoginMvpView.java"
      }
    ],
    "copy_file": [
      {
        "from": "<%= base_dir %>/template/.gitignore",
        "to": "<%= directory %>/<%= app_name %>/.gitignore"
      },
      {
        "from": "<%= base_dir %>/template/build.gradle",
        "to": "<%= directory %>/<%= app_name %>/build.gradle"
      },
      {
        "from": "<%= base_dir %>/template/gradle.properties",
        "to": "<%= directory %>/<%= app_name %>/gradle.properties"
      },
      {
        "from": "<%= base_dir %>/template/gradlew",
        "to": "<%= directory %>/<%= app_name %>/gradlew.bat"
      },
      {
        "from": "<%= base_dir %>/template/local.properties",
        "to": "<%= directory %>/<%= app_name %>/local.properties"
      },
      {
        "from": "<%= base_dir %>/template/settings.gradle",
        "to": "<%= directory %>/<%= app_name %>/settings.gradle"
      },
      {
        "from": "<%= base_dir %>/template/app/proguard-rules.pro",
        "to": "<%= directory %>/<%= app_name %>/app/proguard-rules.pro"
      }
    ],
    "copy_directory": [
      {
        "from": "<%= base_dir %>/template/gradle",
        "to": "<%= directory %>/<%= app_name %>/gradle"
      }
    ]
  },
  "extra_tasks": [
    {
      "name": "generate_model",
      "require_true": ["generate_model"]
    },
    {
      "name": "generate_facebook_hash",
      "require_true": ["enable_facebook_login"],
      "require_false": ["facebook_app_id"]
    }
  ]
}